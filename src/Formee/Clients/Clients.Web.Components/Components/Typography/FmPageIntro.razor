<section>
    <SfBreadcrumb>
        <BreadcrumbItems>
            @Breadcrumbs
        </BreadcrumbItems>
    </SfBreadcrumb>


    <FmSpacer />

    <FmTypography Text="@Heading"
                  Classes="page-heading__large"
                  Type="@Typography.LevelTwo" />
</section>


@code {

    [Parameter]
    public string Heading { get; set; }

    [Parameter]
    public RenderFragment Breadcrumbs { get; set; }
}
