<NavLink href="@Route" 
         class="@Classes"
         ActiveClass="@ActiveClass"
         Match="@MatchRoute">
    <FmTypography Text="@Text" 
                  Icon="@Icon"  />
</NavLink>

@code {
    [Parameter]
    public string Route { get; set; }

    [Parameter]
    public string Classes { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public NavLinkMatch MatchRoute { get; set; } = NavLinkMatch.All;

    [Parameter]
    public string ActiveClass { get; set; }
}
