{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Routes": [
    // Containers Service
    {
      "DownstreamPathTemplate": "/api/containers/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "containers.api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/containers/{id}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/containers/all/{userId:Guid}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "containers.api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/containers/all/{userId:Guid}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/containers",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "containers.api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/containers",
      "UpstreamHttpMethod": [ "POST", "PUT" ]
    },
    // Analytics Service
    {
      "DownstreamPathTemplate": "/api/sites/all/{containerId}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "analytics.api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/sites/all/{containerId}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/sites/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "analytics.api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/sites/{id}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/hits/all/{siteId}/{startDate:DateTime}/{endDate:DateTime}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "analytics.api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/hits/all/{siteId}/{startDate:DateTime}/{endDate:DateTime}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    // Forms Service
    {
      "DownstreamPathTemplate": "/api/forms/all/{siteId}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "forms.api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/forms/all/{siteId}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/formresponse/all/{formId}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "forms.api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/formresponse/all/{formId}",
      "UpstreamHttpMethod": [ "GET" ]
    }
  ]
}
